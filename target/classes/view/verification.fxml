<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.VerificationController" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: transparent;">

    <!-- Fundo degradê -->
    <Rectangle fx:id="backgroundOverlay" width="800" height="600"
               fill="linear-gradient(to bottom right, #4B3F72, #232323)" arcWidth="20" arcHeight="20"/>

    <!-- Container arredondado ao centro -->
    <StackPane AnchorPane.topAnchor="100"
               AnchorPane.bottomAnchor="100"
               AnchorPane.leftAnchor="250"
               AnchorPane.rightAnchor="250">

        <Rectangle arcWidth="20" arcHeight="20" width="300" height="300"
                   fill="rgba(0,0,0,0.3)"/>

        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;" maxWidth="280">
            <Label text="Verificação de Email"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Label text="Insira o código recebido no email"
                   style="-fx-text-fill: rgba(255,255,255,0.8);"/>

            <TextField fx:id="codigoField" promptText="Código de verificação" maxWidth="200"
                       style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: #EAEAEA; -fx-padding: 8 15;"/>

            <Button text="Verificar" onAction="#handleVerify"
                    style="-fx-background-color: #EAEAEA; -fx-text-fill: #4B3F72; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 15; -fx-cursor: hand; -fx-padding: 8 25;"/>

            <Label fx:id="statusLabel" textFill="red" style="-fx-text-fill: white;"/>
        </VBox>
    </StackPane>
</AnchorPane>
