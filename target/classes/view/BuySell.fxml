<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.OrdemController"
            style="-fx-background-color: #1e1e1e; -fx-padding: 20;">

    <top>
        <Label fx:id="labelTitulo" text="Confirmação de Ordem"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
    </top>

    <center>
        <VBox spacing="16" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label fx:id="labelPrecoAtual" text="Preço atual: $0.00"
                   style="-fx-text-fill: #aaaaaa; -fx-font-size: 14px;"/>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Quantidade:" style="-fx-text-fill: white;"/>
                <TextField fx:id="txtQuantidade" promptText="Ex: 1.5"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white; -fx-border-color: #b892ff; -fx-border-radius: 4; -fx-background-radius: 4;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancelar" onAction="#fecharJanela"
                    style="-fx-background-color: transparent; -fx-text-fill: #bbbbbb; -fx-font-weight: bold;"/>
            <Button fx:id="btnConfirmar" text="Confirmar" onAction="#confirmarOrdem"
                    style="-fx-background-color: #b892ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
        </HBox>
    </bottom>

</BorderPane>
