<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UserProfileController"
            style="-fx-background-color: #00758f;">


    <stylesheets>
        <URL value="@/view/css/navbar.css"/>
    </stylesheets>
    <fx:include source="/view/navbar.fxml" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>


    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <VBox spacing="15" alignment="TOP_CENTER"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 30; -fx-max-width: 500;">


            <!-- Foto de perfil -->
            <VBox alignment="CENTER">
                <ImageView fx:id="fotoPerfil" fitHeight="80" fitWidth="80"
                           style="-fx-border-radius: 50%; -fx-background-radius: 50%;"/>
                <Label fx:id="nomeTopoLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="emailTopoLabel" style="-fx-text-fill: #777;"/>
            </VBox>

            <!-- Formulário -->
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints prefWidth="250"/>
                </columnConstraints>

                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Botões -->
            <Button text="Guardar Alterações" onAction="#handleGuardar"
                    style="-fx-background-color: #2e77ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"/>
            <Label fx:id="mensagemLabel" style="-fx-text-fill: green;"/>

        </VBox>
    </VBox>
</AnchorPane>
