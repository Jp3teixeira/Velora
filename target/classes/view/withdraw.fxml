<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;"
      fx:controller="controller.WithdrawController">

    <Label text="Retirar valor" style="-fx-font-weight: bold;"/>
    <TextField fx:id="amountField" promptText="Valor a retirar"/>
    <Button text="Confirmar Retirada" onAction="#handleWithdraw"
            style="-fx-background-color: #dc2626; -fx-text-fill: white;"/>
    <Label fx:id="statusLabel" style="-fx-text-fill: #ef4444;"/>
</VBox>