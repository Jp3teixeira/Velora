<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.WalletController"
            style="-fx-background-color: #121212;">

    <stylesheets>
        <URL value="@/view/css/wallet.css" />
    </stylesheets>

    <!-- TOPO -->
    <top>
        <VBox spacing="0">
            <fx:include source="navbar.fxml"/>
            <VBox spacing="18" styleClass="header-container" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="30" right="30" bottom="20" left="30"/>
                </padding>
                <Label text="Carteira" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                <Label fx:id="totalLabel"
                       text="€ 0,00"
                       style="-fx-text-fill: #b892ff; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            </VBox>
        </VBox>
    </top>

    <!-- CENTRO -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="30" bottom="30" left="30"/>
            </padding>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="depositButton"
                        text="+ Depositar"
                        onAction="#abrirTelaDeposito"
                        styleClass="quick-action convert"
                        prefWidth="180" />

                <Button fx:id="withdrawButton"
                        text="↓ Levantar"
                        onAction="#abrirTelaRetirada"
                        styleClass="quick-action sell"
                        prefWidth="180" />
            </HBox>

            <TabPane fx:id="walletTabPane" styleClass="asset-table" VBox.vgrow="ALWAYS">
                <tabs>
                    <Tab text="Posições Abertas">
                        <AnchorPane style="-fx-background-color: transparent;">
                            <JFXTreeTableView fx:id="cryptoTable"
                                              showRoot="false"
                                              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                                              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                                <columns>
                                    <JFXTreeTableColumn fx:id="colAtivo" text="Ativo" prefWidth="220" />
                                    <JFXTreeTableColumn fx:id="colTicker" text="Ticker" prefWidth="100" />
                                    <JFXTreeTableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="160" />
                                    <JFXTreeTableColumn fx:id="colPrecoMedio" text="Preço Médio (€)" prefWidth="150" />
                                    <JFXTreeTableColumn fx:id="colValor" text="Valor Atual (€)" prefWidth="150" />
                                </columns>
                                <placeholder>
                                    <Label text="Sem ativos." style="-fx-text-fill: #888888;" />
                                </placeholder>
                            </JFXTreeTableView>
                        </AnchorPane>
                    </Tab>

                    <Tab text="Ordens Abertas">
                        <AnchorPane style="-fx-background-color: transparent;">
                            <JFXTreeTableView fx:id="ordersTable"
                                              showRoot="false"
                                              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                                              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                                <columns>
                                    <JFXTreeTableColumn text="Tipo" prefWidth="100" />
                                    <JFXTreeTableColumn text="Ativo" prefWidth="120" />
                                    <JFXTreeTableColumn text="Quantidade" prefWidth="120" />
                                    <JFXTreeTableColumn text="Preço" prefWidth="100" />
                                    <JFXTreeTableColumn text="Estado" prefWidth="100" />
                                </columns>
                                <placeholder>
                                    <Label text="Nenhuma ordem aberta." style="-fx-text-fill: #888888;" />
                                </placeholder>
                            </JFXTreeTableView>
                        </AnchorPane>
                    </Tab>

                    <Tab text="Histórico">
                        <AnchorPane style="-fx-background-color: transparent;">
                            <JFXTreeTableView fx:id="transactionTable"
                                              showRoot="false"
                                              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                                              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                                <columns>
                                    <JFXTreeTableColumn fx:id="colData" text="Data" prefWidth="160" />
                                    <JFXTreeTableColumn fx:id="colTipo" text="Tipo" prefWidth="100" />
                                    <JFXTreeTableColumn fx:id="colAtivoTx" text="Ativo" prefWidth="100" />
                                    <JFXTreeTableColumn fx:id="colQuantidadeTx" text="Quantidade" prefWidth="160" />
                                    <JFXTreeTableColumn fx:id="colValorTx" text="Total (€)" prefWidth="160" />
                                </columns>
                                <placeholder>
                                    <Label text="Sem histórico de transações." style="-fx-text-fill: #888888;" />
                                </placeholder>
                            </JFXTreeTableView>
                        </AnchorPane>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </center>
</BorderPane>