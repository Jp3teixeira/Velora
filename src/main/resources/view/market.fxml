<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import java.net.URL?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MarketController"
            style="-fx-background-color: #121212;">
    <stylesheets>
        <URL value="@/view/css/geral.css"/>
    </stylesheets>

    <!-- Navbar -->
    <top>
        <fx:include source="navbar.fxml"/>
    </top>

    <!-- 1) Sidebar: pesquisa, filtros, tendências e todos os mercados -->
    <left>
        <VBox spacing="8" prefWidth="250" style="-fx-padding: 20;">
            <!-- Pesquisa lazy -->
            <TextField fx:id="searchField"
                       promptText="Pesquisar mercados…"
                       styleClass="search-field"/>

            <!-- Filtros numéricos -->
            <HBox spacing="4">
                <ComboBox fx:id="filterField" promptText="Campo">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Variação 24h"/>
                            <String fx:value="Valor Atual"/>
                            <String fx:value="Volume Mercado"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <ComboBox fx:id="filterOp" promptText="Op">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="&lt;"/>
                            <String fx:value="&gt;"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <TextField fx:id="filterValue"
                           promptText="Valor"
                           prefWidth="60"/>
            </HBox>

            <!-- Trending Markets -->
            <TitledPane text="Tendências" expanded="true">
                <ListView fx:id="trendingView"
                          prefHeight="120"
                          styleClass="watchlist"/>
            </TitledPane>

            <!-- Todos os Mercados -->
            <TitledPane text="Todos os Mercados" expanded="true" VBox.vgrow="ALWAYS">
                <ListView fx:id="watchlistView"
                          styleClass="watchlist"
                          VBox.vgrow="ALWAYS"/>
            </TitledPane>
        </VBox>
    </left>

    <!-- 2) Área de detalhe: título, filtros de tempo, gráfico, KPIs e ações -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

            <!-- Título da moeda -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fx:id="iconMoeda"
                           fitWidth="32"
                           fitHeight="32"
                           preserveRatio="true"/>
                <Label fx:id="marketTitle"
                       text="Seleciona uma moeda"
                       style="-fx-text-fill: white; -fx-font-size: 26; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Filtros de tempo -->
            <HBox spacing="8" alignment="CENTER">
                <ToggleButton text="Últimas 24h" fx:id="btn1D"  styleClass="filtro-toggle"/>
                <ToggleButton text="Últimos 7 dias" fx:id="btn1W" styleClass="filtro-toggle"/>
                <ToggleButton text="Último mês" fx:id="btn1M"  styleClass="filtro-toggle"/>
                <ToggleButton text="Últimos 3 meses" fx:id="btn3M" styleClass="filtro-toggle"/>
                <ToggleButton text="Último ano" fx:id="btn1Y"  styleClass="filtro-toggle"/>
                <ToggleButton text="Todos os dados" fx:id="btnMAX" styleClass="filtro-toggle"/>
            </HBox>

            <!-- Gráfico -->
            <StackPane style="-fx-background-color: #1e1e1e;" VBox.vgrow="ALWAYS">
                <LineChart fx:id="marketChart"
                           title="Market Chart"
                           prefHeight="400"
                           prefWidth="800"
                           styleClass="chart-style">
                    <xAxis>
                        <CategoryAxis label="Hora"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxis" label="Valor (EUR)"/>
                    </yAxis>
                </LineChart>
            </StackPane>

            <!-- KPIs -->
            <HBox spacing="40" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                <VBox alignment="CENTER">
                    <Label text="Valor Atual" style="-fx-text-fill: gray; -fx-font-size: 13;"/>
                    <Label fx:id="labelValorAtual" text="-" styleClass="label-valor"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Variação 24h" style="-fx-text-fill: gray; -fx-font-size: 13;"/>
                    <Label fx:id="labelVariacao" text="-" styleClass="label-variacao-positiva"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Volume Mercado" style="-fx-text-fill: gray; -fx-font-size: 13;"/>
                    <Label fx:id="labelVolume" text="-" styleClass="label-volume"/>
                </VBox>
            </HBox>

            <!-- Ações de compra e venda -->
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                <Button text="Comprar" onAction="#abrirModalCompra"
                        styleClass="btn-comprar"/>
                <Button text="Vender"  onAction="#abrirModalVenda"
                        styleClass="btn-vender"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
