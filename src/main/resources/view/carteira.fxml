<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.WalletController"
            styleClass="root">

    <stylesheets>
        <URL value="@/view/css/wallet.css"/>
    </stylesheets>

    <!-- ==========================
         TOPO: Navbar + Título
         ========================== -->
    <top>
        <VBox spacing="0">
            <fx:include source="navbar.fxml"/>
            <HBox alignment="CENTER_LEFT" styleClass="header-container">
                <padding>
                    <Insets top="30" right="30" bottom="20" left="30"/>
                </padding>
                <Label text="Carteira" styleClass="navbar-title"/>
            </HBox>
        </VBox>
    </top>

    <!-- ==========================
         CORPO (CENTRO)
         ========================== -->
    <center>
        <!-- CORPO: GRID com 70% tabelas e 30% ações -->
        <GridPane styleClass="center-hbox">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="70" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="30"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>

            <!-- LADO ESQUERDO: Tabelas -->
            <VBox GridPane.columnIndex="0" spacing="15" VBox.vgrow="ALWAYS">
                <Label fx:id="totalLabel"
                       text="Valor Total do Portfólio: € 0,00"
                       styleClass="portfolio-display"/>

                <TabPane fx:id="walletTabPane" VBox.vgrow="ALWAYS" styleClass="tab-pane">
                    <tabs>
                        <!-- Posições -->
                        <Tab text="Posições">
                            <AnchorPane styleClass="table-container">
                                <JFXTreeTableView fx:id="cryptoTable"
                                                  showRoot="false"
                                                  AnchorPane.topAnchor="0"
                                                  AnchorPane.bottomAnchor="0"
                                                  AnchorPane.leftAnchor="0"
                                                  AnchorPane.rightAnchor="0"
                                                  styleClass="jfx-tree-table-view">
                                    <columns>
                                        <JFXTreeTableColumn fx:id="colAtivo" text="Ativo" prefWidth="140"/>
                                        <JFXTreeTableColumn fx:id="colTicker" text="Ticker" prefWidth="100"/>
                                        <JFXTreeTableColumn fx:id="colQuantidade" text="Qtd" prefWidth="120"/>
                                        <JFXTreeTableColumn fx:id="colPrecoMedio" text="Preço Médio" prefWidth="140"/>
                                        <JFXTreeTableColumn fx:id="colValor" text="Valor (€)" prefWidth="120"/>
                                    </columns>
                                </JFXTreeTableView>
                            </AnchorPane>
                        </Tab>

                        <!-- Ordens Abertas -->
                        <Tab text="Ordens Abertas">
                            <AnchorPane styleClass="table-container">
                                <JFXTreeTableView fx:id="ordersTable"
                                                  showRoot="false"
                                                  AnchorPane.topAnchor="0"
                                                  AnchorPane.bottomAnchor="0"
                                                  AnchorPane.leftAnchor="0"
                                                  AnchorPane.rightAnchor="0"
                                                  styleClass="jfx-tree-table-view">
                                    <columns>
                                        <JFXTreeTableColumn fx:id="colTipoOrdem" text="Tipo" prefWidth="80"/>
                                        <JFXTreeTableColumn fx:id="colMoedaOrdem" text="Moeda" prefWidth="80"/>
                                        <JFXTreeTableColumn fx:id="colQuantidadeOrdem" text="Qtd" prefWidth="100"/>
                                        <JFXTreeTableColumn fx:id="colPrecoLimiteOrdem" text="Preço (€)" prefWidth="100"/>
                                        <JFXTreeTableColumn fx:id="colDataOrdem" text="Criação" prefWidth="120"/>
                                    </columns>
                                </JFXTreeTableView>
                            </AnchorPane>
                        </Tab>

                        <!-- Histórico -->
                        <Tab text="Histórico">
                            <AnchorPane styleClass="table-container">
                                <JFXTreeTableView fx:id="transactionTable"
                                                  showRoot="false"
                                                  AnchorPane.topAnchor="0"
                                                  AnchorPane.bottomAnchor="0"
                                                  AnchorPane.leftAnchor="0"
                                                  AnchorPane.rightAnchor="0"
                                                  styleClass="jfx-tree-table-view">
                                    <columns>
                                        <JFXTreeTableColumn fx:id="colData" text="Data" prefWidth="120"/>
                                        <JFXTreeTableColumn fx:id="colTipo" text="Tipo" prefWidth="80"/>
                                        <JFXTreeTableColumn fx:id="colAtivoTx" text="Ativo" prefWidth="80"/>
                                        <JFXTreeTableColumn fx:id="colQuantidadeTx" text="Qtd" prefWidth="100"/>
                                        <JFXTreeTableColumn fx:id="colValorTx" text="Valor (€)" prefWidth="120"/>
                                    </columns>
                                </JFXTreeTableView>
                            </AnchorPane>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>

            <!-- LADO DIREITO: Saldo & Operações -->
            <VBox GridPane.columnIndex="1" spacing="25" VBox.vgrow="NEVER">

                <!-- Saldo -->
                <VBox spacing="10" styleClass="wallet-actions-box">
                    <Label text="Saldo da Carteira" styleClass="wallet-actions-title"/>
                    <Label fx:id="balanceLabel" text="€ 0,00" styleClass="balance-display"/>
                </VBox>

                <Separator orientation="HORIZONTAL"/>

                <!-- Depositar/Levantar -->
                <VBox spacing="15" styleClass="wallet-actions-box">
                    <Label text="Operações de Saldo" styleClass="wallet-actions-title"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Depositar:" styleClass="wallet-actions-label"/>
                        <TextField fx:id="depositAmountField" promptText="€" styleClass="text-field"/>
                        <Button text="OK" styleClass="action-button deposit" onAction="#confirmarDeposito"/>
                    </HBox>
                    <Label fx:id="depositStatusLabel" styleClass="status-label deposit-success"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Levantar:" styleClass="wallet-actions-label"/>
                        <TextField fx:id="withdrawAmountField" promptText="€" styleClass="text-field"/>
                        <Button text="OK" styleClass="action-button withdraw" onAction="#confirmarLevantamento"/>
                    </HBox>
                    <Label fx:id="withdrawStatusLabel" styleClass="status-label withdraw-error"/>
                </VBox>
            </VBox>
        </GridPane>
    </center>
</BorderPane>
