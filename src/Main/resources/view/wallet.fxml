<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.WalletController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: #121212;">

    <stylesheets>
        <URL value="@/view/css/wallet.css"/>

    </stylesheets>

    <!-- TOP -->
    <top>
        <VBox spacing="0">
            <fx:include source="navbar.fxml"/>

            <VBox spacing="20" style="-fx-background-color: #121212;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>


                <HBox spacing="20" alignment="CENTER_LEFT">
                    <ImageView fx:id="walletIcon" fitWidth="40" fitHeight="40" preserveRatio="true"
                               styleClass="wallet-icon"/>

                    <VBox>
                        <Label text="CARTEIRA DIGITAL"
                               style="-fx-text-fill: #94a3b8; -fx-font-size: 14px; -fx-font-weight: medium;"/>
                        <Label fx:id="balanceLabel" text="€ 0,00"
                               styleClass="balance-display">
                            <tooltip>
                                <Tooltip text="Saldo atual disponível na sua carteira"/>
                            </tooltip>
                        </Label>
                    </VBox>
                </HBox>

                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button text="DEPOSITAR" fx:id="depositButton"
                            onAction="#abrirTelaDeposito"
                            styleClass="action-button deposit"/>
                    <Button text="RETIRAR" fx:id="withdrawButton"
                            onAction="#abrirTelaRetirada"
                            styleClass="action-button withdraw"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <!-- CENTRO -->
    <center>
        <VBox spacing="20" style="-fx-background-color: #121212;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Secção Ativos -->
            <VBox spacing="10" styleClass="card-shadow asset-section">
                <Label text="MEUS ATIVOS" styleClass="section-title"/>
                <TableView fx:id="cryptoTable" styleClass="asset-table">
                    <columns>
                        <TableColumn text="ATIVO" styleClass="table-column" prefWidth="200"/>
                        <TableColumn text="TICKER" styleClass="table-column" prefWidth="100"/>
                        <TableColumn text="QUANTIDADE" styleClass="table-column" prefWidth="150"/>
                        <TableColumn text="VALOR (€)" styleClass="table-column" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Secção Histórico -->
            <VBox spacing="10" styleClass="card-shadow transaction-section">
                <Label text="HISTÓRICO DE TRANSAÇÕES" styleClass="section-title"/>
                <TableView fx:id="transactionTable" styleClass="transaction-table">
                    <columns>
                        <TableColumn text="DATA" styleClass="table-column" prefWidth="150"/>
                        <TableColumn text="TIPO" styleClass="table-column" prefWidth="100"/>
                        <TableColumn text="ATIVO" styleClass="table-column" prefWidth="100"/>
                        <TableColumn text="QUANTIDADE" styleClass="table-column" prefWidth="150"/>
                        <TableColumn text="VALOR (€)" styleClass="table-column" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>


    <!-- RODAPÉ -->
    <bottom>
        <HBox spacing="20" alignment="CENTER" styleClass="quick-actions card-shadow"
              style="-fx-background-color: #1a1a1a; -fx-padding: 20 0;">
            <Button text="COMPRAR RÁPIDO" styleClass="quick-action buy"/>
            <Button text="VENDER RÁPIDO" styleClass="quick-action sell"/>
            <Button text="CONVERTER" styleClass="quick-action convert"/>
        </HBox>
    </bottom>

</BorderPane>
