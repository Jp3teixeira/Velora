<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MoedaController"
            style="-fx-background-color: #121212;">

    <stylesheets>
        <URL value="@/view/css/navbar.css"/>
    </stylesheets>

    <!-- Navbar no topo -->
    <top>
        <fx:include source="navbar.fxml"/>
    </top>

    <!-- Conteúdo principal -->
    <center>
        <VBox spacing="25" alignment="TOP_CENTER" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

            <!-- Título -->
            <HBox spacing="15" alignment="CENTER">
                <ImageView fx:id="iconMoeda" fitWidth="40" fitHeight="40" preserveRatio="true"/>
                <Label fx:id="nomeMoeda" text="Bitcoin" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
                <Label fx:id="simboloMoeda" text="(BTC)" style="-fx-text-fill: gray; -fx-font-size: 16;"/>
            </HBox>

            <!-- Dados -->
            <HBox spacing="50" alignment="CENTER" style="-fx-padding: 10 0 20 0;">
                <VBox alignment="CENTER">
                    <Label text="Valor Atual" style="-fx-text-fill: gray; -fx-font-size: 13;"/>
                    <Label fx:id="valorAtual" text="-" styleClass="label-valor"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Variação 24h" style="-fx-text-fill: gray; -fx-font-size: 13;"/>
                    <Label fx:id="variacao24h" text="-" styleClass="label-variacao-positiva"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Volume Mercado" style="-fx-text-fill: gray; -fx-font-size: 13;"/>
                    <Label fx:id="volumeMercado" text="-" styleClass="label-volume"/>
                </VBox>
            </HBox>

            <!-- Gráfico -->
            <StackPane maxWidth="Infinity" style="-fx-background-color: #1e1e1e;">
                <LineChart fx:id="historicoChart"
                           title="Histórico de Preço"
                           prefHeight="450"
                           prefWidth="1000"
                           styleClass="chart-style">
                    <xAxis>
                        <CategoryAxis label="Tempo"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Preço (USD)"/>
                    </yAxis>
                </LineChart>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
