<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.VerificationController" prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20" layoutX="100" layoutY="100" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Verificação de Email" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Label text="Insira o código que recebeu no seu email." />

        <TextField fx:id="codigoField" promptText="Código de verificação" maxWidth="200"/>

        <Button text="Verificar" onAction="#handleVerify"/>

        <Label fx:id="statusLabel" textFill="red" />
    </VBox>
</AnchorPane>
