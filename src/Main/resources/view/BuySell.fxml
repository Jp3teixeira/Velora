<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.OrdemController"
            prefWidth="1000" prefHeight="1000"
            style="-fx-background-color: rgba(30,30,30,0.95);
                   -fx-background-radius: 12;
                   -fx-border-radius: 12;
                   -fx-padding: 20;">

    <!-- ===================================== TOPO ===================================== -->
    <top>
        <VBox alignment="CENTER" spacing="5">
            <Label fx:id="labelTitulo" text="COMPRA â€“ Bitcoin"
                   style="-fx-text-fill: white;
                          -fx-font-size: 24px;
                          -fx-font-weight: bold;"/>
            <Label fx:id="labelPrecoAtual" text="PreÃ§o atual: â‚¬ 15,75"
                   style="-fx-text-fill: #aaaaaa;
                          -fx-font-size: 16px;"/>
        </VBox>
    </top>

    <!-- ==================================== CENTRO ==================================== -->
    <center>
        <!-- Container horizontal com dois blocos: formulÃ¡rio (esquerda) e ordem/estimativas (direita) -->
        <HBox spacing="50" alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;">
            <!-- ========== LADO DIREITO (order book + estimativas) ========== -->
            <VBox spacing="30" alignment="TOP_CENTER" prefWidth="450">
                <!-- Order Book: cabeÃ§alhos e duas listas (Asks / Bids) -->
                <GridPane hgap="30" vgap="10" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <!-- TÃ­tulos das colunas -->
                    <Label text="ðŸ“ˆ Asks (Vendas)" GridPane.columnIndex="0" GridPane.rowIndex="0"
                           style="-fx-text-fill: #ff5555; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="ðŸ“‰ Bids (Compras)" GridPane.columnIndex="1" GridPane.rowIndex="0"
                           style="-fx-text-fill: #55ff55; -fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <!-- VBoxes que receberÃ£o os nÃ­veis do order book -->
                    <VBox fx:id="vboxAsks" spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1"
                          style="-fx-padding: 8 0 0 0;"/>
                    <VBox fx:id="vboxBids" spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1"
                          style="-fx-padding: 8 0 0 0;"/>
                </GridPane>

                <!-- Estimativas de ExecuÃ§Ã£o -->
                <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 20 0 0 0;">
                    <Label text="â–¶ Estimativa de ExecuÃ§Ã£o:"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-underline: true;"/>
                    <Label fx:id="labelEstimativaQuantidade"
                           text="Quantidade executÃ¡vel: 0"
                           style="-fx-text-fill: #dddddd; -fx-font-size: 14px;"/>
                    <Label fx:id="labelEstimativaPrecoMedio"
                           text="PreÃ§o mÃ©dio estimado: â‚¬0,00"
                           style="-fx-text-fill: #dddddd; -fx-font-size: 14px;"/>
                    <Label fx:id="labelEstimativaCustoTotal"
                           text="Custo total estimado: â‚¬0,00"
                           style="-fx-text-fill: #dddddd; -fx-font-size: 14px;"/>
                </VBox>
            </VBox>

            <!-- ========== LADO ESQUERDO (formulÃ¡rio de ordem) ========== -->
            <VBox spacing="30" alignment="TOP_CENTER" prefWidth="450">
                <!-- Define aqui o ToggleGroup para Market vs Limit -->
                <fx:define>
                    <ToggleGroup fx:id="toggleTipoOrdem"/>
                </fx:define>

                <!-- RadioButtons Market / Limit -->
                <HBox spacing="40" alignment="CENTER">
                    <RadioButton fx:id="rbMarket" text="Valor de Mercado"
                                 toggleGroup="${toggleTipoOrdem}"
                                 style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                    <RadioButton fx:id="rbLimit" text="Valor Determinado"
                                 toggleGroup="${toggleTipoOrdem}"
                                 style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                </HBox>

                <!-- Quantidade -->
                <!-- Note o onKeyReleased para habilitar o botÃ£o quando for numÃ©rico e >â€‰0 -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Quantidade:" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                    <TextField fx:id="txtQuantidade"
                               promptText="Ex: 1.5"
                               prefWidth="200"
                               onKeyReleased="#onQuantidadeTyped"
                               style="-fx-background-color: #2a2a2a;
                                      -fx-text-fill: white;
                                      -fx-border-color: #b892ff;
                                      -fx-border-radius: 4;
                                      -fx-background-radius: 4;
                                      -fx-padding: 6 10;"/>
                </VBox>

                <!-- PreÃ§o Limite (visÃ­vel apenas se Limit estiver selecionado) -->
                <VBox spacing="5" alignment="CENTER_LEFT"
                      fx:id="boxPrecoLimite" visible="false" managed="false">
                    <Label text="PreÃ§o Limite:" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                    <TextField fx:id="txtPrecoLimite"
                               promptText="Ex: 30.00"
                               prefWidth="200"
                               style="-fx-background-color: #2a2a2a;
                                      -fx-text-fill: white;
                                      -fx-border-color: #b892ff;
                                      -fx-border-radius: 4;
                                      -fx-background-radius: 4;
                                      -fx-padding: 6 10;"/>
                </VBox>

                <!-- BotÃ£o Confirmar: agora sem disable="true", pois serÃ¡ habilitado via listener -->
                <Button fx:id="btnConfirmar"
                        text="Confirmar"
                        onAction="#confirmarOrdem"
                        prefWidth="180" prefHeight="40"
                        style="-fx-background-color: #b892ff;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 8;"/>
            </VBox>
        </HBox>
    </center>

    <!-- ==================================== RODAPÃ‰ ==================================== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 20 40 20 0;">
            <Button text="Cancelar"
                    onAction="#fecharJanela"
                    prefWidth="120" prefHeight="36"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #bbbbbb;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>
